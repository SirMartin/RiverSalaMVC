<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <!-- TableSorter -->
    <script src="@Url.Content("~/Scripts/jquery.tablesorter.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.metadata.js")" type="text/javascript"></script>
    <link href="@Url.Content("~/Content/images/style/tablesorter/style.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery.tablesorter.pager.js")" type="text/javascript"></script>
    <link href="@Url.Content("~/Scripts/jquery.tablesorter.pager.css")" rel="stylesheet" type="text/css" />
    <title>River Sala Web</title>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#tablaAdmin").tablesorter({ widthFixed: true, widgets: ['zebra'] })
	        .tablesorterPager({ container: $("#pager") });
        }
    );
    </script>
</head>
<body>
    <div id="container">
        <div id="banner">
            <h1>
            </h1>
        </div>
        <div id="navcontainer">
            <ul id="navlist">
                <li>@Html.ActionLink("NOTICIAS", "Index", "Home", null, new { id = "current" })</li>
                <li>@Html.ActionLink("ARCHIVO DE NOTICIAS", "Historico", "Noticia", null, null)</li>
                <li>@Html.ActionLink("EL CLUB", "Index", "Club", null, null)</li>
                <li>@Html.ActionLink("PLANTILLA", "Index", "Usuario", null, null)</li>
                <li>@Html.ActionLink("LINKS", "Index", "Links", null, null)</li>
            </ul>
        </div>
        <div id="sidebar">
            @Html.Partial("_LogOnPartial")
            <!-- COMIENZO PATROCINADORES -->
            <p>
                <h3>
                    Patrocinadores</h3>
                <a target="_blank" href="http://www.tramigest.es">
                    <img height="58" class="noborder" src="@Url.Content("/Content/images/sections/tramigest.gif")" alt="Tramigest" title="Tramigest" /></a>
                <img width="100" height="63" class="noborder" src="@Url.Content("/Content/images/sections/elave.gif")" alt="Cerveceria El Ave"
                    title="El Ave" />
                <a target="_blank" href="http://www.piribipiribi.com">
                    <img height="63" class="noborder" src="@Url.Content("/Content/images/sections/piribi.jpg")" alt="Patxaran con Nueces"
                        title="Piribi Piribi" /></a>
            </p>
            <!-- FIN PATROCINADORES -->
        </div>
        <div id="content">
            @RenderBody()
        </div>
        <div id="container-foot">
            <div id="footer">
                <p>
                    <a href="/">homepage</a> | <a href="mailto:webmaster@riversala.com">contacto</a>
                    | Realizada por <a href="http://www.piribisoft.com">PiribiSoft</a> | Pagina Web
                    Oficial Club Atletico River Sala Zaragoza. | <a rel="license" href="http://creativecommons.org/licenses/by-nc-sa/3.0/es/">
                        <img alt="Creative Commons License" style="border-width: 0" src="http://i.creativecommons.org/l/by-nc-sa/3.0/es/80x15.png" /></a>
                    2008-@DateTime.Now.Year</p>
            </div>
        </div>
    </div>
</body>
</html>
