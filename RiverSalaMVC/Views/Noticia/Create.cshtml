@model RiverSalaMVC.Noticia
<h2>
    PUBLICAR NOTICIA</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script type="text/javascript">
    ///Para evitar que se envien varias veces los comentarios.
    $(document).ready(function () {
        $("#btnPublicarNoticia").click(function () {
            $("#btnPublicarNoticia").attr('disabled', 'disabled');
            $("#btnPublicarNoticia").val("Enviando...")
            document.form.submit();
        });
    });
</script>
<form name="form" id="form" action="/Noticia/Create" method="post">
@Html.ValidationSummary(true)
<div class="editor-label">
    @Html.LabelFor(model => model.Titulo)
</div>
<div class="editor-field">
    @Html.TextBoxFor(model => model.Titulo, new { size = "65" })
    @Html.ValidationMessageFor(model => model.Titulo)
</div>
<div class="editor-label">
    @Html.LabelFor(model => model.Contenido)
</div>
<div class="editor-field">
    @Html.TextAreaFor(model => model.Contenido, new { cols = "50", rows = "12" })
    @Html.ValidationMessageFor(model => model.Contenido)
</div>
<div class="editor-label">
    ¿Es privada?
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.EsPrivada)
</div>
<p>
    <input id="btnPublicarNoticia" type="submit" value="Publicar Noticia" />
</p>
</form>
