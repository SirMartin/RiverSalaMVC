@model RiverSalaMVC.Noticia
@{
    ViewBag.Title = "Create";
}
<h2>
    Create</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <div class="editor-label">
        @Html.LabelFor(model => model.Titulo)
    </div>
    <div class="editor-field">
        @Html.TextBoxFor(model => model.Titulo, new { size = "65" })
        @Html.ValidationMessageFor(model => model.Titulo)
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.Contenido)
    </div>
    <div class="editor-field">
        @Html.TextAreaFor(model => model.Contenido, new { cols="50", rows="12" })
        @Html.ValidationMessageFor(model => model.Contenido)
    </div>

    <div class="editor-label">
        ¿Es privada?
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.EsPrivada)
    </div>

    <p>
        <input type="submit" value="Publicar Noticia" />
    </p>

}