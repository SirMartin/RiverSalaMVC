@model IEnumerable<RiverSalaMVC.Noticia>
@{
    ViewBag.Title = "Historico";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>
    Historico de noticias</h2>
<br />
@if (Model == null)
{
    <table align="center">
        @{List<DateTime> fechas = (List<DateTime>)ViewBag.FechasHistorico;
          int i = 0;
          foreach (DateTime fecha in fechas)
          {
              i++;
              if (i % 4 == 1)
              {
                  @:<tr>
                  @:<td style="text-align:center;width:25%"><h3>@Html.ActionLink(fecha.ToString("MMMM yyyy"), "Historico")</h3></td>
              }
              else if (i % 4 == 2)
              {
                  @:<td style="text-align:center;width:25%"><h3>@Html.ActionLink(fecha.ToString("MMMM yyyy"), "Historico")</h3></td>
              }
              else if (i % 4 == 3)
              {
                  @:<td style="text-align:center;width:25%"><h3>@Html.ActionLink(fecha.ToString("MMMM yyyy"), "Historico")</h3></td>
              }
              else
              {
                  @:<td style="text-align:center;width:25%"><h3>@Html.ActionLink(fecha.ToString("MMMM yyyy"), "Historico")</h3></td>
                  @:</tr>
              }
          }
        }
    </table>
}
else
{
    @:hola
}