@model RiverSalaMVC.Models.NoticiaModel
@{
    ViewBag.Title = "Details";
}
<!-- Aqui el SCRIPT de Javascript que escribe en el textarea -->
<script type="text/javascript">
    function poner_texto(texto) {
        alert("HOLA");
        var txt = $("#contenido").val();
        txt = txt + texto;
        $("#contenido").val(txt);
    }
</script>
<div style="text-align: left">
    <h2>
        @Model.Titulo</h2>
</div>
<div class="noticia">
    <img alt="Noticia" class="noborder" src="Content/images/style/escudo.gif" title="escudo" />
    @Html.Raw(Model.Contenido)</div>
<p class="post">
    @Html.ActionLink("Editar Noticia", "Edit", "Noticia", new { id = @Model.IdNoticia }, new { @class = "readmore" })
    @if (Model.Comentarios > 0)
    {
        @Html.ActionLink("Hay " + Model.Comentarios + " comentarios", "Comentarios", "Noticia", new { id = @Model.IdNoticia }, new { @class = "comments" })
    }
    else
    {
        @Html.ActionLink("No hay comentarios", "Comentarios", "Noticia", new { id = @Model.IdNoticia }, new { @class = "comments" })
    }
    <span class="date">Publicada el @Model.Fecha.ToString("dd/MM/yyyy a la\\s HH:mm") por
        @Html.ActionLink(Model.Autor, "Details", "Usuario", new { id = Model.IdAutor }, null)</span>
</p>
<div align="center">
    <h2>
        <u>COMENTARIOS</u></h2>
</div>
<br>
@foreach (RiverSalaMVC.Comentario item in ViewBag.Comentarios)
{
    <div class="noticia">
        <img alt="Noticia" class="noborder" width="60" height="75" src="fotos/@item.IdUsuario"
            title="" />
        @Html.Raw(item.Texto)</div>
    <p class="post">
        <a class="readmore">posteos</a> <span class="date">Comentado el @item.Fecha.ToString("dd/MM/yyyy a la\\s HH:mm")
            por @Html.ActionLink(item.Usuario.Nombre, "Details", "Usuario", new { id = item.IdUsuario }, null)</span>
    </p>
    <br />
    <hr />
    <br />
}
<!-- SECCION PARA ESCRIBIR UN COMENTARIO NUEVO -->
